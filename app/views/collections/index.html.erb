<p id="notice"><%= notice %></p>

<h1>Collections</h1>

<table>
  <thead>
    <tr>
      <th>Collection date</th>
      <th>Amount</th>
      <th>Reference</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @collections.each do |collection| %>
      <tr>
        <td><%= collection.collection_date %></td>
        <td><%= collection.amount %></td>
        <td><%= collection.reference %></td>
        <td><%= link_to 'Show', [@invoice, collection] %></td>
        <td><%= link_to 'Edit', edit_invoice_collection_path(@invoice, collection) %></td>
  
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Collection', new_invoice_collection_path(@invoice) %>
